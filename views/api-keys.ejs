<!DOCTYPE html>
<html lang="id">
<head>
    <%- include('partials/head', { title: 'Manajemen Kunci API' }) %>
    <style>
        .key-card {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .key-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        .bg-pattern {
            background-image: radial-gradient(#4f46e5 0.5px, transparent 0.5px);
            background-size: 24px 24px;
            opacity: 0.05;
        }
    </style>
</head>
<body class="bg-slate-50 min-h-screen">
    <div class="flex min-h-screen">
        <%- include('partials/sidebar') %>
        <div class="flex-1 flex flex-col lg:ml-0">
            <%- include('partials/navbar', { title: 'Manajemen Kunci API' }) %>
            <main class="flex-1 p-4 sm:p-6 lg:p-8 relative">
                <div class="absolute inset-0 bg-pattern pointer-events-none"></div>
                
                <div class="max-w-7xl mx-auto relative z-10">
                    <!-- Header Section -->
                    <div class="flex flex-col md:flex-row md:items-center justify-between mb-10 fade-in">
                        <div>
                            <h1 class="text-3xl sm:text-4xl font-black text-slate-900 tracking-tight mb-2">Kunci API</h1>
                            <p class="text-slate-500 font-medium">Kelola akses kredensial untuk integrasi sistem eksternal Anda</p>
                        </div>
                        <div class="mt-6 md:mt-0">
                            <form action="/api-keys/generate" method="POST">
                                <button type="submit" class="w-full sm:w-auto group flex items-center justify-center space-x-3 px-8 py-4 bg-indigo-600 hover:bg-indigo-700 text-white rounded-2xl font-bold transition-all shadow-xl shadow-indigo-200 hover:-translate-y-1 active:scale-95">
                                    <i class="ri-add-circle-fill text-xl group-hover:rotate-90 transition-transform duration-300"></i>
                                    <span>Buat Kunci Baru</span>
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- Statistics / Info Cards -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10 fade-in" style="animation-delay: 0.1s">
                        <div class="bg-white p-6 rounded-3xl border border-slate-100 shadow-sm flex items-center space-x-4">
                            <div class="w-12 h-12 bg-emerald-50 rounded-2xl flex items-center justify-center text-emerald-600">
                                <i class="ri-key-fill text-2xl"></i>
                            </div>
                            <div>
                                <p class="text-sm font-bold text-slate-400 uppercase tracking-wider">Total Kunci</p>
                                <p class="text-2xl font-black text-slate-800"><%= keys.length %></p>
                            </div>
                        </div>
                        <div class="bg-white p-6 rounded-3xl border border-slate-100 shadow-sm flex items-center space-x-4">
                            <div class="w-12 h-12 bg-blue-50 rounded-2xl flex items-center justify-center text-blue-600">
                                <i class="ri-shield-check-fill text-2xl"></i>
                            </div>
                            <div>
                                <p class="text-sm font-bold text-slate-400 uppercase tracking-wider">Status Keamanan</p>
                                <p class="text-2xl font-black text-slate-800">Aktif</p>
                            </div>
                        </div>
                        <div class="bg-white p-6 rounded-3xl border border-slate-100 shadow-sm flex items-center space-x-4">
                            <div class="w-12 h-12 bg-amber-50 rounded-2xl flex items-center justify-center text-amber-600">
                                <i class="ri-pulse-fill text-2xl"></i>
                            </div>
                            <div>
                                <p class="text-sm font-bold text-slate-400 uppercase tracking-wider">Metode Akses</p>
                                <p class="text-2xl font-black text-slate-800">Bearer / Query</p>
                            </div>
                        </div>
                    </div>

                    <!-- Main Content -->
                    <div class="bg-white rounded-[2rem] shadow-xl shadow-slate-200/50 border border-slate-100 overflow-hidden fade-in" style="animation-delay: 0.2s">
                        <div class="p-8 border-b border-slate-50 bg-slate-50/30">
                            <h3 class="text-xl font-bold text-slate-800 flex items-center">
                                <i class="ri-list-check-3 mr-2 text-indigo-500"></i>
                                Daftar Kredensial
                            </h3>
                        </div>

                        <div class="p-8">
                            <!-- Alerts -->
                            <% if (error) { %>
                                <div class="mb-8 p-4 bg-red-50 border border-red-100 text-red-600 rounded-2xl flex items-center space-x-3 transition-all animate-bounce-short">
                                    <i class="ri-error-warning-fill text-xl"></i>
                                    <span class="font-bold"><%= error %></span>
                                </div>
                            <% } %>
                            <% if (success) { %>
                                <div class="mb-8 p-4 bg-indigo-50 border border-indigo-100 text-indigo-600 rounded-2xl flex items-center space-x-3">
                                    <i class="ri-checkbox-circle-fill text-xl"></i>
                                    <span class="font-bold"><%= success %></span>
                                </div>
                            <% } %>

                            <% if (keys && keys.length > 0) { %>
                                <div class="grid grid-cols-1 gap-4">
                                    <% keys.forEach((k, index) => { %>
                                        <div class="key-card group bg-white border border-slate-100 rounded-2xl p-6 flex flex-col md:flex-row md:items-center justify-between gap-6 hover:border-indigo-200">
                                            <div class="flex items-center space-x-5">
                                                <div class="w-12 h-12 bg-slate-50 group-hover:bg-indigo-50 rounded-xl flex items-center justify-center text-slate-400 group-hover:text-indigo-600 transition-colors">
                                                    <span class="font-black text-lg"><%= index + 1 %></span>
                                                </div>
                                                <div class="flex-1 min-w-0">
                                                    <div class="flex items-center space-x-2 mb-1">
                                                        <span class="text-xs font-black text-slate-400 uppercase tracking-widest">Kunci Akses</span>
                                                        <span class="h-1 w-1 bg-slate-300 rounded-full"></span>
                                                        <span class="text-xs font-bold text-indigo-500">SHA-256 Secured</span>
                                                    </div>
                                                    <% if (k.raw) { %>
                                                        <div class="flex items-center space-x-3">
                                                            <code class="text-base font-mono font-bold text-slate-700 bg-slate-100 px-3 py-1 rounded-lg">
                                                                <%= k.raw %>
                                                            </code>
                                                            <button onclick="copyToClipboard('<%= k.raw %>')" class="p-2 text-slate-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-xl transition-all" title="Salin Kunci">
                                                                <i class="ri-file-copy-2-line text-lg"></i>
                                                            </button>
                                                        </div>
                                                    <% } else { %>
                                                        <div class="flex items-center space-x-2 text-slate-300 py-1">
                                                            <i class="ri-lock-password-fill"></i>
                                                            <span class="text-sm font-bold italic tracking-tight">Tersembunyi demi keamanan</span>
                                                        </div>
                                                    <% } %>
                                                </div>
                                            </div>

                                            <div class="flex items-center justify-between md:justify-end gap-8 border-t md:border-t-0 border-slate-50 pt-4 md:pt-0">
                                                <div class="text-right">
                                                    <p class="text-[10px] font-black text-slate-400 uppercase tracking-tighter mb-0.5">Dibuat Pada</p>
                                                    <p class="text-sm font-bold text-slate-600">
                                                        <%= new Date(k.created_at).toLocaleDateString('id-ID', { day: '2-digit', month: 'short', year: 'numeric' }) %>
                                                    </p>
                                                </div>
                                                <form action="/api-keys/delete/<%= k.id %>" method="POST" data-confirm="Hapus kunci ini? Akses integrasi akan langsung terputus." class="inline">
                                                    <button type="submit" class="w-12 h-12 flex items-center justify-center text-slate-400 hover:text-red-600 hover:bg-red-50 rounded-2xl transition-all">
                                                        <i class="ri-delete-bin-7-line text-xl"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>
                            <% } else { %>
                                <div class="py-20 text-center">
                                    <div class="w-24 h-24 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-6">
                                        <i class="ri-key-2-line text-5xl text-slate-200"></i>
                                    </div>
                                    <h4 class="text-xl font-bold text-slate-800">Belum ada kunci API</h4>
                                    <p class="text-slate-500 mt-2">Klik tombol "Buat Kunci Baru" untuk memulai integrasi Anda.</p>
                                </div>
                            <% } %>

                            <!-- Help Section -->
                            <div class="mt-12 bg-slate-900 rounded-3xl p-8 text-white relative overflow-hidden">
                                <div class="absolute top-0 right-0 p-8 opacity-10">
                                    <i class="ri-terminal-box-line text-9xl"></i>
                                </div>
                                <div class="relative z-10">
                                    <h4 class="text-xl font-black mb-6 flex items-center">
                                        <i class="ri-code-s-slash-line mr-3 text-indigo-400"></i>
                                        Dokumentasi Cepat
                                    </h4>
                                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                                        <div>
                                            <p class="text-slate-400 text-sm font-bold uppercase tracking-widest mb-3">Otentikasi Header</p>
                                            <div class="bg-slate-800 p-4 rounded-2xl font-mono text-xs text-indigo-300 border border-slate-700">
                                                curl -X POST "/send-message" \<br>
                                                -H "X-API-KEY: your_key" \<br>
                                                -d '{"to": "628...", "message": "Hello"}'
                                            </div>
                                        </div>
                                        <div>
                                            <p class="text-slate-400 text-sm font-bold uppercase tracking-widest mb-3">Otentikasi Query</p>
                                            <div class="bg-slate-800 p-4 rounded-2xl font-mono text-xs text-indigo-300 border border-slate-700">
                                                GET /status?api_key=your_key
                                            </div>
                                            <p class="mt-4 text-xs text-slate-400 italic font-medium">
                                                * Gunakan header untuk keamanan maksimal dalam lingkungan produksi.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                Swal.fire({
                    icon: 'success',
                    title: 'Berhasil!',
                    text: 'Kunci API disalin ke clipboard.',
                    timer: 1500,
                    showConfirmButton: false,
                    position: 'center',
                    background: '#fff',
                    color: '#1e293b',
                    iconColor: '#4f46e5',
                    customClass: {
                        popup: 'rounded-[2rem] shadow-2xl border border-slate-100'
                    }
                });
            });
        }
    </script>

    <!-- Mobile menu overlay -->
    <div id="mobileMenuOverlay" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-40 lg:hidden hidden"></div>

    <%- include('partials/simple-scripts') %>
</body>
</html>
